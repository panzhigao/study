  <select id="findPagable" resultMap="MoreResultMap" parameterType="com.pan.query.QueryArticle">
  	select <include refid="Simple_Column_List"/>,u.nickname,u.user_portrait,u.user_id as u_user_id from t_article a join t_user u
  	on a.user_id=u.user_id 
  	<include refid="whereSql"/>
  	<choose>
  		<when  test="isHot !=null and isHot !=''">
  			order by stick desc,comment_count desc,view_count desc,publish_time desc
  		</when >
  		<when test="orderCondition !=null and orderCondition !=''">
  			order by ${orderCondition}
  		</when>
  		<otherwise>
  			order by stick desc,create_time desc
  		</otherwise>
  	</choose>
  	<if test="offset!=null and row !=null">
  		limit #{offset},#{row}
  	</if>
  </select>
  
  <sql id="whereSql">
  	<where> 
  		    1=1
  		<if test="articleId !=null and articleId!='' ">
  			and a.article_id=#{articleId,jdbcType=VARCHAR}
  		</if>
  		<if test="status !=null and status !=''">
  			and a.status=#{status}
  		</if>
  		<if test="userId !=null and userId !=''">
  			and a.user_id=#{userId,jdbcType=VARCHAR}
  		</if>
  		<if test="username !=null and username !=''">
  			and a.username=#{username,jdbcType=VARCHAR}
  		</if>
  		<if test="type !=null and type !=''">
  			and a.type=#{type}
  		</if>
  		<if test="whereCondition !=null">
  			and ${whereCondition}
  		</if>
  	</where>
  </sql>
  
  <select id="countByParams" resultType="int" parameterType="com.pan.query.QueryArticle">
	  	select count(0) from t_article a
	  	<include refid="whereSql"/>
  </select>
  
  
  <select id="findListByUserId" resultMap="BaseResultMap">
  	select <include refid="Base_Column_List"/> from t_article where user_id=#{userId} order by create_time desc
  </select>
  
  <insert id="insertSelective" parameterType="com.pan.entity.Article">
    insert into t_article
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="articleId != null">
        article_id,
      </if>
      <if test="userId != null">
        user_id,
      </if>
      <if test="username != null">
        username,
      </if>
      <if test="status != null">
        status,
      </if>
      <if test="createTime != null">
        create_time,
      </if>
      <if test="updateTime != null">
        update_time,
      </if>
      <if test="publishTime != null">
        publish_time,
      </if>
      <if test="title != null">
        title,
      </if>
      <if test="outline != null">
        outline,
      </if>
      <if test="image != null">
        image,
      </if>
      <if test="commentCount != null">
        comment_count,
      </if>
      <if test="viewCount != null">
        view_count,
      </if>
      <if test="type != null">
        type,
      </if>
      <if test="stick != null">
        stick,
      </if>
      <if test="highQuality != null">
        high_quality,
      </if>
      <if test="content != null">
        content,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=BIGINT},
      </if>
      <if test="articleId != null">
        #{articleId,jdbcType=VARCHAR},
      </if>
      <if test="userId != null">
        #{userId,jdbcType=VARCHAR},
      </if>
      <if test="username != null">
        #{username,jdbcType=VARCHAR},
      </if>
      <if test="status != null">
        #{status,jdbcType=CHAR},
      </if>
      <if test="createTime != null">
        #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="updateTime != null">
        #{updateTime,jdbcType=TIMESTAMP},
      </if>
      <if test="publishTime != null">
        #{publishTime,jdbcType=TIMESTAMP},
      </if>
      <if test="title != null">
        #{title,jdbcType=VARCHAR},
      </if>
      <if test="outline != null">
        #{outline,jdbcType=VARCHAR},
      </if>
      <if test="image != null">
        #{image,jdbcType=VARCHAR},
      </if>
      <if test="commentCount != null">
        #{commentCount,jdbcType=INTEGER},
      </if>
      <if test="viewCount != null">
        #{viewCount,jdbcType=INTEGER},
      </if>
      <if test="type != null">
        #{type,jdbcType=CHAR},
      </if>
      <if test="stick != null">
        #{stick,jdbcType=INTEGER},
      </if>
      <if test="highQuality != null">
        #{highQuality,jdbcType=CHAR},
      </if>
      <if test="content != null">
        #{content,jdbcType=LONGVARCHAR},
      </if>
    </trim>
  </insert>
  
  <update id="updateArticleByArticleId" parameterType="com.pan.entity.Article">
  	update t_article
  	<set>
  		<if test="title !=null and title !=''">
  			title=#{title,jdbcType=VARCHAR},
  		</if>
  		<if test="content !=null and content !=''">
  			content=#{content,jdbcType=LONGVARCHAR},
  		</if>
  		<if test="updateTime !=null ">
  			update_time=#{updateTime,jdbcType=TIMESTAMP},
  		</if>
  		<if test="publishTime !=null ">
  			publish_time=#{publishTime,jdbcType=TIMESTAMP},
  		</if>
  		<if test="status!=null and status!=''">
  			status=#{status,jdbcType=VARCHAR},
  		</if>
  		<if test="outline != null and outline !=''">
  			outline=#{outline,jdbcType=VARCHAR},
  		</if>
  		<if test="image != null and image !=''">
  			image=#{image,jdbcType=VARCHAR},
  		</if>
  		<if test="commentCount != null and commentCount !=''">
  			comment_count=comment_count+#{commentCount},
  		</if>
  		<if test="viewCount != null and viewCount !=''">
  			view_count=view_count+#{viewCount},
  		</if>
  		<if test="stick != null">
  			stick=#{stick},
  		</if>
  		<if test="highQuality != null and highQuality !=''">
  			high_quality=#{highQuality},
  		</if>
  	</set>
  	where article_id=#{articleId}
  </update>
  
  <delete id="deleteByUserIdAndArticleId">
  	delete from t_article where user_id=#{userId} and article_id=#{articleId}
  </delete>
  
  <select id="getMaxStick" resultType="int">
  	select max(stick) from t_article
  </select>
</mapper>