<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pan.mapper.PictureMapper" >

  <resultMap id="BaseResultMap" type="com.pan.entity.Picture">
    <id     column="id"             	property="id"              jdbcType="BIGINT" />
    <result column="picture_id"        	property="pictureId"       jdbcType="VARCHAR" />
    <result column="user_id"        	property="userId"          jdbcType="VARCHAR" />
    <result column="create_time"        property="createTime"      jdbcType="TIMESTAMP" />
    <result column="pic_url"            property="picUrl"          jdbcType="TIMESTAMP" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id,picture_id,user_id,create_time,pic_url
  </sql>
  
  <select id="findByPictureId" resultMap="BaseResultMap">
  	select <include refid="Base_Column_List"/> from t_picture where picture_id=#{pictureId}
  </select>
  
  <select id="findByParams" resultMap="BaseResultMap" parameterType="com.pan.query.QueryPicture">
  	select <include refid="Base_Column_List"/> from t_picture 
  	<include refid="whereSql"/>
  	order by create_time desc
  	<if test="offset!=null and row !=null">
  		limit #{offset},#{row}
  	</if>
  </select>
  
  <insert id="savePicture" parameterType="com.pan.entity.Picture">
  	insert into t_picture (<include refid="Base_Column_List"/>) values 
  	(null,#{pictureId,jdbcType=VARCHAR},#{userId,jdbcType=VARCHAR},#{createTime,jdbcType=TIMESTAMP},#{picUrl,jdbcType=VARCHAR})
  </insert>
  
  <delete id="deleteByPictureIds">
  	delete from t_picture where user_id=#{userId} and picture_id in
  	<foreach collection="picIds" item="picId" open="(" close=")" separator=",">
  		#{picId}
  	</foreach>
  </delete>
  
  <select id="getCountByParams" resultType="int">
  	select count(0) from t_picture tp
  	<include refid="whereSql"/>
  </select>
  
  <sql id="whereSql">
  	<where>
  		<if test="pictureId !=null and pictureId!='' ">
  			and picture_id=#{pictureId}
  		</if>
  		<if test="userId !=null and userId!=''">
  			and user_id=#{userId}
  		</if>
  	</where>
  </sql>
</mapper>