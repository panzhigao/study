<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pan.mapper.CollectionMapper" >

  <resultMap id="BaseResultMap" type="com.pan.entity.Collection">
    <id     column="id"             	property="id"              jdbcType="INTEGER" />
    <result column="collection_id"      property="collectionId"    jdbcType="VARCHAR" />
    <result column="article_id"        	property="articleId"       jdbcType="VARCHAR" />
    <result column="user_id"        	property="userId"          jdbcType="VARCHAR" />
    <result column="create_time"        property="createTime"      jdbcType="TIMESTAMP" />
    <result column="title"              property="title"           jdbcType="VARCHAR"/>
  </resultMap>
  
  <resultMap id="CollectionMap" type="com.pan.entity.Collection">
    <id     column="id"             	property="id"              jdbcType="INTEGER" />
    <result column="collection_id"      property="collectionId"    jdbcType="VARCHAR" />
    <result column="article_id"        	property="articleId"       jdbcType="VARCHAR" />
    <result column="user_id"        	property="userId"          jdbcType="VARCHAR" />
    <result column="create_time"        property="createTime"      jdbcType="TIMESTAMP" />
    <result column="title"              property="title"           jdbcType="VARCHAR"/>
  </resultMap>
  
  <sql id="Base_Column_List" >
    id,collection_id,article_id,user_id,create_time,title
  </sql>
  
   <select id="findUserCollection" resultMap="BaseResultMap">
  	select <include refid="Base_Column_List"/> from t_collection where user_id=#{userId} and article_id=#{articleId}
  </select>

  <select id="findByParams" resultMap="CollectionMap">
  	select a.id,a.collection_id,a.article_id,a.user_id,a.create_time,a.title from t_collection a 
  	<where>
  		<if test="userId !=null and userId !=''">
  			and a.user_id=#{userId}
  		</if>
  		<if test="articleId !=null and articleId !=''">
  			and a.article_id=#{articleId}
  		</if>
  	</where>
  	order by create_time desc
  	<if test="offset!=null and row !=null">
  		limit #{offset},#{row}
  	</if>
  </select>
  
    <select id="getCountByParams" resultType="int">
	  	select count(0) from t_collection 
	  	<where>
	  		<if test="userId !=null and userId!=''">
	  			and user_id=#{userId}
	  		</if>
	  	</where>
    </select>
   
  <insert id="addCollection" parameterType="com.pan.entity.Collection">
  	insert into t_collection (<include refid="Base_Column_List"/>) values (null,#{collectionId,jdbcType=VARCHAR},#{articleId,jdbcType=VARCHAR},#{userId,jdbcType=VARCHAR},#{createTime,jdbcType=TIMESTAMP},#{title,jdbcType=VARCHAR})
  </insert>
  
  <delete id="deleteByUserIdAndArticleId">
  	delete from t_collection where user_id=#{userId} and article_id=#{articleId}
  </delete>
  
</mapper>