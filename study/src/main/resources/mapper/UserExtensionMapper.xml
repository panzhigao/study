<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pan.mapper.UserExtensionMapper" >

  <resultMap id="BaseResultMap" type="com.pan.entity.UserExtension">
    <id     column="id"             	property="id"              jdbcType="INTEGER" />
    <result column="user_id"        	property="userId"          jdbcType="VARCHAR" />
    <result column="user_brief"       	property="userBrief"       jdbcType="VARCHAR" />
    <result column="create_time"        property="createTime"      jdbcType="TIMESTAMP" />
    <result column="update_time"        property="updateTime"      jdbcType="TIMESTAMP" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id,user_id,user_brief,create_time,update_time
  </sql>
  
  <select id="findByUserId" resultMap="BaseResultMap">
  	select <include refid="Base_Column_List"/> from t_user_extension where user_id=#{userId}
  </select>
  
  <insert id="saveUserExtension" parameterType="com.pan.entity.UserExtension">
  	insert into t_user_extension (<include refid="Base_Column_List"/>) values 
  	(null,#{userId,jdbcType=VARCHAR},#{userBrief,jdbcType=VARCHAR},#{createTime,jdbcType=TIMESTAMP},#{updateTime,jdbcType=TIMESTAMP})
  </insert>
  
  <update id="updateUserExtensionByUserId" parameterType="com.pan.entity.User">
  	update t_user_extension 
  	<set>
  		<if test="userBrief !=null">
  			user_brief=#{userBrief,jdbcType=VARCHAR},
  		</if>
  		<if test="updateTime !=null and updateTime !='' ">
  			update_time=#{updateTime,jdbcType=TIMESTAMP},
  		</if>
  	</set>
  	where user_id=#{userId}
  </update>
  
</mapper>