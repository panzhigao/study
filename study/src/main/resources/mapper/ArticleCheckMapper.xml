<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pan.mapper.ArticleCheckMapper" >

  <resultMap id="BaseResultMap" type="com.pan.entity.ArticleCheck">
    <id     column="id"             	property="id"              jdbcType="BIGINT" />
    <result column="user_id"        	property="userId"          jdbcType="VARCHAR" />
    <result column="article_id"        	property="articleId"       jdbcType="VARCHAR" />
    <result column="title"              property="title"           jdbcType="VARCHAR" />
    <result column="complete_flag"      property="completeFlag"    jdbcType="VARCHAR" />
    <result column="check_type"         property="checkType"       jdbcType="VARCHAR" />
    <result column="check_user_id"      property="checkUserId"     jdbcType="VARCHAR" />
    <result column="check_username"     property="checkUsername"   jdbcType="VARCHAR" />
    <result column="create_time"        property="createTime"      jdbcType="TIMESTAMP" />
    <result column="check_time"         property="checkTime"       jdbcType="TIMESTAMP" />
    <result column="approve_flag"       property="approveFlag"     jdbcType="VARCHAR" />
  </resultMap>
  
  <resultMap id="MoreResultMap" type="com.pan.entity.ArticleCheck" extends="BaseResultMap">  
    <result column="content"    		property="content"        jdbcType="VARCHAR" />
  </resultMap> 
  
  <resultMap id="DetailResultMap" type="com.pan.vo.ArticleCheckVO" extends="BaseResultMap">  
    <result column="username"    		property="username"        jdbcType="VARCHAR" />
    <result column="nickname"    		property="nickname"        jdbcType="VARCHAR" />
  </resultMap> 
  
  <sql id="BaseColumns">
  c.id,c.user_id,c.article_id,c.title,c.complete_flag,c.check_type,c.check_user_id,
  c.check_username,c.create_time,c.check_time,c.approve_flag
  </sql>  
      
  <select id="findById" resultMap="MoreResultMap">
  	select <include refid="BaseColumns"/>,c.content from t_article_check c where id=#{id}
  </select>
  
  <select id="findByParams" resultMap="BaseResultMap" parameterType="com.pan.query.QueryArticleCheck">
  	select <include refid="BaseColumns"/> from t_article_check c
  	<include refid="whereSql"/>
  	<if test="offset!=null and row !=null">
  		limit #{offset},#{row}
  	</if>
  </select>
  
    <select id="findVOByParams" resultMap="DetailResultMap" parameterType="com.pan.query.QueryArticleCheck">
  	select <include refid="BaseColumns"/>,user.nickname,user.username from t_article_check c left join t_user user on c.user_id=user.user_id
  	<include refid="whereSql"/>
  	<if test="orderCondition !=null and orderCondition !='' ">
  		order by ${orderCondition}
  	</if>
  	<if test="offset!=null and row !=null">
  		limit #{offset},#{row}
  	</if>
  </select>
  
  <sql id="whereSql">
  	<where> 
  		1=1
  		<if test="userId !=null and userId !='' ">
  			and c.user_id=#{userId}
  		</if>    
  		<if test="articleId !=null and articleId !='' ">
  			and c.article_id=#{articleId}
  		</if>
  		<if test="completeFlag !=null and completeFlag !='' ">
  			and c.complete_flag=#{completeFlag}
  		</if>
  	</where>
  </sql>
  
  <select id="getCountByParams" resultType="int" parameterType="com.pan.query.QueryArticleCheck">
	  	select count(0) from t_article_check c
	  	<include refid="whereSql"/>
  </select>
  
  <insert id="saveArticleCheck" parameterType="com.pan.entity.ArticleCheck">
  	insert into t_article_check (
  	<trim suffixOverrides=",">
  		<if test="userId !=null">
  			user_id,
  		</if>
  		<if test="articleId !=null">
  			article_id,
  		</if>
  		<if test="title !=null">
  			title,
  		</if>
  		<if test="completeFlag !=null">
  			complete_flag,
  		</if>
  		<if test="checkType !=null">
  			check_type,
  		</if>
  		<if test="checkUserId !=null">
  			check_user_id,
  		</if>
  		<if test="checkUsername !=null">
  			check_username,
  		</if>
  		<if test="createTime !=null">
  			create_time,
  		</if>
  		<if test="checkTime !=null">
  			check_time,
  		</if>
  		<if test="approveFlag !=null">
  			approve_flag,
  		</if>
  		<if test="content !=null">
  			content,
  		</if>
  	</trim>
  	) 
  	values 
  	(
  	<trim suffixOverrides=",">
  		<if test="userId !=null">
  			#{userId,jdbcType=VARCHAR},
  		</if>
  		<if test="articleId !=null">
  			#{articleId,jdbcType=VARCHAR},
  		</if>
  		<if test="title !=null">
  			#{title,jdbcType=VARCHAR},
  		</if>
  		<if test="completeFlag !=null">
  			#{completeFlag,jdbcType=VARCHAR},
  		</if>
  		<if test="checkType !=null">
  			#{checkType,jdbcType=VARCHAR},
  		</if>
  		<if test="checkUserId !=null">
  			#{checkUserId,jdbcType=VARCHAR},
  		</if>
  		<if test="checkUsername !=null">
  			#{checkUsername,jdbcType=VARCHAR},
  		</if>
  		<if test="createTime !=null">
  			#{createTime,jdbcType=TIMESTAMP},
  		</if>
  		<if test="checkTime !=null">
  			#{checkTime,jdbcType=TIMESTAMP},
  		</if>
  		<if test="approveFlag !=null">
  			#{approveFlag,jdbcType=VARCHAR},
  		</if>
  		<if test="content !=null">
  			#{content,jdbcType=VARCHAR},
  		</if>
  	</trim>
  	)
  </insert>
  
  <update id="updateArticleCheck" parameterType="com.pan.entity.ArticleCheck">
  	update t_article_check
  	<set>
  		<if test="checkTime !=null ">
  			check_Time=#{checkTime,jdbcType=TIMESTAMP},
  		</if>
  		<if test="completeFlag !=null ">
  			complete_flag=#{completeFlag,jdbcType=VARCHAR},
  		</if>
  		<if test="checkUserId !=null ">
  			check_user_id=#{checkUserId,jdbcType=VARCHAR},
  		</if>
  		<if test="checkUsername !=null ">
  			check_username=#{checkUsername,jdbcType=VARCHAR},
  		</if>
  		<if test="approveFlag !=null ">
  			approve_flag=#{approveFlag,jdbcType=VARCHAR},
  		</if>
  	</set>
  	where id=#{id}
  </update>
   
</mapper>