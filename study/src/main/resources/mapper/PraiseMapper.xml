<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pan.mapper.PraiseMapper" >

  <resultMap id="BaseResultMap" type="com.pan.entity.Praise">
    <id     column="id"             	property="id"              jdbcType="BIGINT" />
    <result column="praise_id"        	property="praiseId"        jdbcType="VARCHAR" />
    <result column="comment_id"        	property="commentId"       jdbcType="VARCHAR" />
    <result column="user_id"        	property="userId"          jdbcType="VARCHAR" />
    <result column="create_time"        property="createTime"      jdbcType="TIMESTAMP" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id,praise_id,comment_id,user_id,create_time
  </sql>
  
  <insert id="addPraise" parameterType="com.pan.entity.Praise">
  	insert into t_praise (<include refid="Base_Column_List"/>) values (null,#{praiseId},#{commentId},#{userId},#{createTime})
  </insert>
  
  <select id="findByParams" resultMap="BaseResultMap" parameterType="com.pan.query.QueryPraise">
  	select <include refid="Base_Column_List"/> from t_praise
  	<include refid="whereSql"/>
  </select>
  
  <sql id="whereSql">
  	<where>
  		<if test="commentId != null and commentId!=''">
  			and comment_id=#{commentId}
  		</if>
  		<if test="userId != null and userId!=''">
  			and user_id=#{userId}
  		</if>
  	</where>
  </sql>
  
  <select id="getCount" parameterType="com.pan.query.QueryPraise" resultType="int">
  	select count(0) from t_praise
  	<include refid="whereSql"/>
  </select>
</mapper>