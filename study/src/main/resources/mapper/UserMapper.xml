<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pan.mapper.UserMapper" >

  <resultMap id="BaseResultMap" type="com.pan.entity.User">
    <id     column="id"             	property="id"              jdbcType="INTEGER" />
    <result column="user_id"        	property="userId"          jdbcType="VARCHAR" />
    <result column="sex"        	    property="sex"             jdbcType="VARCHAR" />
    <result column="username"       	property="username"        jdbcType="VARCHAR" />
    <result column="nickname"       	property="nickname"        jdbcType="VARCHAR" />
    <result column="password"           property="password"        jdbcType="VARCHAR" />
    <result column="create_time"        property="createTime"      jdbcType="TIMESTAMP" />
    <result column="last_login_time"    property="lastLoginTime"   jdbcType="TIMESTAMP" />
    <result column="status"    			property="status"          jdbcType="VARCHAR" />
    <result column="telephone"    		property="telephone"       jdbcType="VARCHAR" />
    <result column="update_time"        property="updateTime"      jdbcType="TIMESTAMP" />
    <result column="user_portrait"      property="userPortrait"    jdbcType="VARCHAR" />
    <result column="admin_flag"         property="adminFlag"       jdbcType="VARCHAR" />
    <result column="address"            property="address"         jdbcType="VARCHAR" />
  </resultMap>
  
  <resultMap id="MoreResultMap" type="com.pan.dto.UserDTO" extends="BaseResultMap">  
    <result property="roleNames" column="role_names"/>  
  </resultMap> 
  
  <resultMap id="UserRoleResultMap" type="com.pan.entity.UserRole">
    <id     column="id"             	property="id"              jdbcType="INTEGER" />
    <result column="user_id"        	property="userId"          jdbcType="VARCHAR" />
    <result column="role_id"        	property="roleId"          jdbcType="VARCHAR" />
    <result column="create_time"        property="createTime"      jdbcType="TIMESTAMP" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id,user_id,sex,username,nickname,password,create_time,last_login_time,status,telephone,
    update_time,user_portrait,admin_flag,address
  </sql>
  
  <select id="findByUserId" resultMap="BaseResultMap">
  	select <include refid="Base_Column_List"/> from t_user where user_id=#{userId}
  </select>
  
  <select id="findByTelephone" resultMap="BaseResultMap">
  	select <include refid="Base_Column_List"/> from t_user where telephone=#{telephone}
  </select>
  
  <select id="findByUsername" resultMap="BaseResultMap">
  	select <include refid="Base_Column_List"/> from t_user where username=#{username}
  </select>
  
  <insert id="saveUser" parameterType="com.pan.entity.User">
  	insert into t_user (<include refid="Base_Column_List"/>) values 
  	(null,#{userId,jdbcType=VARCHAR},#{sex,jdbcType=VARCHAR},#{username,jdbcType=VARCHAR},#{nickname,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR},
  	#{createTime,jdbcType=TIMESTAMP},#{lastLoginTime,jdbcType=TIMESTAMP},#{status,jdbcType=VARCHAR},#{telephone,jdbcType=VARCHAR},
  	#{updateTime,jdbcType=TIMESTAMP},#{userPortrait,jdbcType=VARCHAR},#{adminFlag,jdbcType=VARCHAR},#{address,jdbcType=VARCHAR})
  </insert>
  
  <update id="updateUserByUserId" parameterType="com.pan.entity.User">
  	update t_user 
  	<set>
  		<if test="username !=null and username !='' ">
  			username=#{username,jdbcType=VARCHAR},
  		</if>
  		<if test="nickname !=null and nickname !='' ">
  			nickname=#{nickname,jdbcType=VARCHAR},
  		</if>
  		<if test="password != null and password !='' ">
  			password=#{password,jdbcType=VARCHAR},
  		</if>
  		<if test="lastLoginTime != null">
  			last_login_time=#{lastLoginTime,jdbcType=TIMESTAMP},
  		</if>
  		<if test="status != null and status !=''">
  			status=#{status,jdbcType=VARCHAR},
  		</if>
  		<if test="telephone != null and telephone !=''">
  			telephone=#{telephone,jdbcType=VARCHAR},
  		</if>
  		<if test="userPortrait !=null and userPortrait !='' ">
  			user_portrait=#{userPortrait,jdbcType=VARCHAR},
  		</if>
  		<if test="sex !=null and sex !='' ">
  			sex=#{sex,jdbcType=VARCHAR},
  		</if>
  		<if test="updateTime != null">
  			update_time=#{updateTime,jdbcType=TIMESTAMP},
  		</if>
  		<if test="updateUser !=null and updateUser !=''">
  			update_user=#{updateUser,jdbcType=VARCHAR},
  		</if>
  		<if test="adminFlag !=null and adminFlag !=''">
  			admin_flag=#{adminFlag,jdbcType=VARCHAR},
  		</if>
  		<if test="address !=null and address !=''">
  			address=#{address,jdbcType=VARCHAR},
  		</if>
  	</set>
  	where user_id=#{userId}
  </update>
  
  <select id="getCountByParams" resultType="int">
  	select count(0) from t_user tu
  	<include refid="whereSql"/>
  </select>
  
  <sql id="whereSql">
  	<where> 
  		<if test="sex !=null and sex !='' ">
  			and tu.sex=#{sex}
  		</if>
  		<if test="status !=null and status !=''">
  			and tu.status=#{status}
  		</if>
  		<if test="telephone !=null and telephone!=''">
  			and tu.telephone=#{telephone}
  		</if>
  		<if test="username !=null and username!=''">
  			and tu.username like CONCAT('%','${username}','%')
  		</if>
  		<if test="nickname !=null and nickname!=''">
  			and tu.nickname=#{nickname}
  		</if>
  	</where>
  </sql>
  	
  <select id="findByParams" resultMap="MoreResultMap">
  	select tu.id,tu.user_id,tu.sex,tu.username,tu.nickname,tu.create_time,tu.last_login_time,tu.status,tu.telephone,tu.update_time,tu.user_portrait,group_concat(tr.role_name) as role_names 
  	from t_user tu left join t_user_role tur on tu.user_id=tur.user_id left join t_role tr on tr.role_id= tur.role_id
  	<include refid="whereSql"/>
  	group by tu.user_id
  	<if test="offset!=null and row !=null">
  		limit #{offset},#{row}
  	</if>
  </select>	
  
  <insert id="addUserRole" parameterType="java.util.List">
  	insert into t_user_role (user_id,role_id,create_time) values
  	<foreach collection="list" item="item" separator="," close=";">  	
  		  (#{item.userId,jdbcType=VARCHAR},#{item.roleId,jdbcType=VARCHAR},#{item.createTime,jdbcType=TIMESTAMP})
  	</foreach>
  </insert>	
  
  <!-- 根据角色查找使用该角色的用户数 -->
  <select id="findRoleUserCountByRoleId" resultType="int">
  	select count(0) from t_user_role where role_id=#{roleId}
  </select>
  
  <!-- 根据角色查找使用该角色的用户数 -->
  <select id="findUserByRoleId" resultMap="BaseResultMap">
  	select tu.id,tu.user_id,tu.sex,tu.username,tu.nickname,tu.create_time,tu.last_login_time,tu.status,tu.telephone,tu.update_time,tu.user_portrait
  	from t_user tu join t_user_role tur on tu.user_id=tur.user_id
  	where role_id=#{roleId}
  </select>
  
  <delete id="deleteUserRoleByUserId" >
  	delete from t_user_role where user_id=#{userId}
  </delete>
</mapper>